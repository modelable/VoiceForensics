extends ./layout.pug
block content
    div(class='container')
        div(class="row mt-5")
            div(class="col-md-6 m-auto")
                div(class="card card-body")
                    h1(class="text-center mb-3")
                        i(class="fas fa-solid fa-globe")  Login
                    if errors
                        each error in errors
                            div(class="alert alert-warning alert-dismissible fade show" role="alert")= error.msg
                                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                                    span(aria-hidden="true") &times;
                    if success_msg != ''
                        div(class="alert alert-success alert-dismissible fade show" role="alert")= success_msg
                                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                                    span(aria-hidden="true") &times;
                    if error != ''
                        div(class="alert alert-warning alert-dismissible fade show" role="alert")= error
                                button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                                    span(aria-hidden="true") &times;
                    form(action="/users/login" method="POST")
                        div(class="form-group")
                            label(for="name") Name
                            input(type="text" id="name" name="name" class="form-control" placeholder="Enter Your Name" value=name)
                        div(class="form-group")
                            label(for="phone") Phone
                            input(type="text" id="phone" name="phone" class="form-control" placeholder="Enter Your PhoneNumber" value=phone)
                        div(class="form-group")
                            label(for="password") Password
                            input(type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value=password)
                        button(type='submit' class="btn btn-info btn-block") Login
                    p(class="lead mt-4") No Account YET? 
                       a(href='/users/register') Register